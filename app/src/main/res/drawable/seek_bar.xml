<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo de la barra (parte no completada) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Color de fondo -->
            <size android:height="1dp" />     <!-- GROSOR AQUÃ -->
            <corners android:radius="5dp" />  <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Parte completada de la barra -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/teal_700" /> <!-- Color de progreso -->
                <size android:height="1dp" />     <!-- MISMO GROSOR -->
                <corners android:radius="5dp" />
            </shape>
        </clip>
    </item>
</layer-list>
